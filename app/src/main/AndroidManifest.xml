<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.ireolaniyan.gistroom"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".signup.SignUpActivity"
            android:label="SignInActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".FeedsListActivity"
            android:label="@string/title_activity_feedsList"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".FeedsActivity"
            android:label="@string/title_activity_feeds"
            android:theme="@style/AppTheme"
            android:parentActivityName=".FeedsListActivity"> <!-- Enabling hierarchical navigation-->
        </activity>
    </application>

</manifest>